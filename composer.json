{
	"name": "wporg/plugin-directory",
	"description": "",
	"homepage": "https://wordpress.org/plugins",
	"license": "GPL-2.0-or-later",
	"config": {
		"platform": {
			"php": "7.4"
		},
		"_comment": "Work around `test:watch` timeout, see https://github.com/spatie/phpunit-watcher/issues/63#issuecomment-545633709",
		"process-timeout": 0
	},
	"repositories" : [
		{
			"_comment": "Note that `composer update` won't do anything for this package unless you change the version in both places.",
			"type"    : "package",
			"package" : {
				"name"     : "sonarsource/sonar-scanner",
				"version"  : "4.6.2.2472",
				"dist"     : {
					"url"  : "https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.6.2.2472-macosx.zip",
					"type" : "zip"
				},
				"bin": [
			        "bin/sonar-scanner",
				    "bin/sonar-scanner-debug"
			    ]
			}
		}
	],
	"require": {
		"squizlabs/php_codesniffer": "^3",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"phpcompatibility/phpcompatibility-wp": "^2",
		"sirbrillig/phpcs-variable-analysis": "^2",
		"wp-coding-standards/wpcs": "^2",
		"phpcsstandards/phpcsutils": "^1.x-dev",
		"wptrt/wpthemereview": "*",
		"sonarsource/sonar-scanner": "4.6.2.2472"
	},
	"require-dev": {
		"phpunit/phpunit": "^7",
		"spatie/phpunit-watcher": "^1.23"
	},
	"scripts": {
		"test": [
			"phpunit tests"
		],
		"test:watch": "phpunit-watcher watch < /dev/tty",
		"_comment_TODO": "tmp while WIP, don't hardcode these long term",
		"sonar-scanner": "sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.login=c99a718b943cdf43d8d7168dac0ded02042c3e60"
	},
	"autoload": {
		"classmap": [
			"./vendor/wp-coding-standards/wpcs/",
			"./MinimalPluginStandard/"
		]
	}
}
